WindowManager:
    Source:
    Mapper:
    Uploader:

<Source>:
    name: 'Source'

    test_input:test_input

    GridLayout:
        cols: 1
        size: root.width, root.height
        pos_hint: {}

        GridLayout:
            cols: 3

            Label: 
                text: 'Radio-Selector'
            TextInput:
                multiline: False
                id: test_input
            Label:
                text: 'openEHRInfo'

        Button:
            text: 'Upload OPT'
            font_size: 32
            on_press: root.uploadbutton()

        Button:
            text: 'Press'
            font_size: 32
            on_press: root.press()

        GridLayout:
            cols: 3
            Label: 
                text: 'File-Select or SQL-Query Input'
        
        GridLayout:
            cols: 3
            Label: 
                text: 'Data Preview'
        
        GridLayout:
            cols: 2

            Button:
                text: 'Next'
                on_release:
                    app.root.current = "Mapper"
                    root.manager.transition.direction = "left"

<Mapper>:
    name: 'Mapper'
    
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        
        Label:
            text: 'Test'

        BoxLayout:
            orientation: "horizontal"
            
            Button:
                text: 'before'
                on_release:
                    app.root.current = "Source"
                    root.manager.transition.direction = "right"
            Button:
                text: 'n√§xt'
                on_release:
                    app.root.current = "Uploader"
                    root.manager.transition.direction = "left"

<Uploader>:
    name: 'Uploader'
    
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
    
        Label:
            text: 'Test'
        Button:
            text: "Build Comp"
            on_press: root.buildbutton()
        
        BoxLayout:
            orientation: "horizontal"
            size: root.width, 0.2
            
            Button:
                text:"before"
                on_release:
                    app.root.current = "Mapper"
                    root.manager.transition.direction = "right"
            Button:
                text: ""